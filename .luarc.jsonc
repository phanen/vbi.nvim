{
	"$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
	"runtime": {
		"version": "LuaJIT"
	},
	"workspace": {
		"library": [
			"$VIMRUNTIME",
			"deps/nvim-test",
			"${3rd}/luv/library",
			"${3rd}/busted/library",
			"${3rd}/luassert/library"
		]
	},
	"diagnostics": {
		"libraryFiles": "Disable",
		"groupFileStatus": {
			"strict": "Opened",
			"strong": "Opened",
			"ambiguity": "Opened",
			"duplicate": "Opened",
			"global": "Opened",
			"luadoc": "Opened",
			"redefined": "Opened",
			"type-check": "Opened",
			"unbalanced": "Opened",
			"unused": "Opened"
		},
		"groupSeverity": {
			"strong": "Warning",
			"strict": "Warning"
		},
		"unusedLocalExclude": ["_*"]
	}
}
